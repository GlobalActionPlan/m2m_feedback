<tal:main xmlns="http://www.w3.org/1999/xhtml"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  i18n:domain="m2m_feedback">
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">
      <a href="${request.resource_url(context)}">${context.title}</a>
      <small>${context.type_title|context.type_name}</small>
    </h3>
  </div>
  <div class="panel-body" tal:define="ruleset view.resolve_uid(context.ruleset)">
    <div>
      <span i18n:translate="">Ruleset</span>:
      <a href="${request.resource_url(ruleset)}">${ruleset.title}</a>
    </div>
    <div>
      <span i18n:translate="">Referenced sections</span>:
      <ul>
        <tal:uid tal:repeat="uid context.referenced_sections">
        <li tal:define="obj view.resolve_uid(uid)">
          <a href="${request.resource_url(obj)}">
            ${obj.title}
          </a>
        </li>
        </tal:uid>
      </ul>
    </div>
  </div>
</div>
